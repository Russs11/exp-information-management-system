generator client {
  provider = "prisma-client-js"
  output   = "generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String              @id @default(cuid())
  createAt DateTime            @default(now()) @map("create_at")
  updateAt DateTime            @updatedAt @map("update_at")
  email    String              @unique
  name     String?
  password String
  role     Role                @default(user)
  ioss     InspectionOfScene[]

  @@map("user")
}

model InspectionOfScene {
  id                            String   @id @default(cuid())
  createAt                      DateTime @default(now()) @map("create_at")
  updateAt                      DateTime @updatedAt @map("update_at")
  dateOfTheInspectionOfTheScene DateTime @map("date_of_the_inspection_of_the_scene")
  addressOfTheScene             String   @map("address_of_the_scene")
  reasonForInspectionOfTheScene String   @map("reason_for_inspection_of_the_scene")
  userId                        String   @map("user_id")
  user                          User     @relation(fields: [userId], references: [id])

  @@map("inspection_of_scene")
}

enum Role {
  admin
  user
}
